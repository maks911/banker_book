{{ use('backend/assets/AppAsset') }}
{{ use('yii/bootstrap4') }}
{{ use('yii/widgets/ActiveForm') }}
{{ register_asset_bundle('backend/assets/AppAsset') }}  {# asset root for yii advanced template #}
    {{ void(this.beginPage()) }}
<!DOCTYPE html>
<html lang="{{ app.language }}">
<head>
    <meta charset="{{ app.charset }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ html.encode(this.title) }}</title>
    {{ html.csrfMetaTags | raw }}
    {{ void(this.head) }}
</head>
<body class="d-flex flex-column h-100 hold-transition sidebar-mini layout-fixed">
{{ void(this.beginBody()) }}
<div class="wrapper">
    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
        <img class="animation__shake" src="{{ register_app_asset().baseUrl }}/dist/img/AdminLTELogo.png"
             alt="AdminLTELogo" height="60" width="60">
    </div>
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        {{ nav_bar_begin({
            'brandLabel': 'BankerBook Test App',
            'brandUrl' : app.homeUrl,
        }) }}
        {{ nav_widget({
            'options': {
                'class' : 'navbar-nav ml-auto',
            },
            'items': [{
                'label': 'Home',
                'url': '/admin/',
                'options' : {'class' : 'nav-item'},
                'linkOptions' : {'class' : 'nav-link'},
            }]
        }) }}
        {{ nav_bar_end() }}
    </nav>
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="/admin/" class="brand-link">
            <img src="{{ register_app_asset().baseUrl }}/dist/img/AdminLTELogo.png" alt="AdminLTE Logo"
                 class="brand-image img-circle elevation-3"
                 style="opacity: .8">
            <span class="brand-text font-weight-light">AdminLTE 3</span>
        </a>
        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="{{ register_app_asset().baseUrl }}/dist/img/user2-160x160.jpg"
                         class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">Shekhtman Maxim</a>
                </div>
            </div>
            <div class="form-inline">
                {% set form = active_form_begin({
                    'id' : 'search-form',
                    'action' : '/admin/search',
                    'options' : {'class' : 'form-horizontal'},
                }) %}
                <div class="input-group" data-widget="sidebar-search">
                    {{ html.input('text', 'search', '',
                        {
                            'class' : 'form-control form-control-sidebar',
                            'placeholder' : 'Start Typing',
                        })
                        | raw
                    }}
                    <div class="input-group-append">
                        <input type="button" value="Find" class="btn btn-sidebar js-search"/>
                    </div>
                </div>
                {{ active_form_end() }}
            </div>
            <nav class="mt-2">
                {{ nav_widget({
                    'options': {
                        'class' : 'nav nav-pills nav-sidebar flex-column',
                    },
                    'activateParents' : true,
                    'items': [
                        {
                            'label': 'Kitchens List',
                            'url': '/admin/',
                            'options' : {'class' : 'nav-item'},
                            'linkOptions' : {'class' : 'nav-link'},
                        },
                        {
                            'label': 'Add Kitchen',
                            'url': '/admin/add',
                            'options' : {'class' : 'nav-item'},
                            'linkOptions' : {'class' : 'nav-link'},
                        }
                    ]
                }) }}
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
            {{ content | raw }}
        </section>
    </div>
</div>
{{ void(this.endBody()) }}
</body>
</html>
{{ void(this.endPage()) }}
