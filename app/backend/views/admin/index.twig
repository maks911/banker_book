{{ set(this, 'title', 'BankerBook test App') }}
<div class="site-index">
    <div class="jumbotron text-center bg-transparent">
        <h1 class="display-4">BankerBook Test App!</h1>
    </div>
    <div class="body-content">
        {% if app.session.hasFlash('success') %}
            <div class="add__success container">
                {{ app.session.getFlash('success') }}
            </div>
        {% endif %}
        <div class="pl-table">
            <div class="pl-table__wrapper">
                <div class="pl-thead tall">
                    <div class="row">
                        <div class="col">Name</div>
                        <div class="col">Tags</div>
                        <div class="col">Actions</div>
                    </div>
                </div>
                <div class="pl-tbody">
                    {% for post in posts %}
                        <div class="row">
                            <div class="col">
                                {{ post.kitchen_name }}
                            </div>
                            <div class="col">
                                {% for tag in post.tags %}
                                    {{ tag.value }}
                                    {% if loop.last == false  %},{% endif%}
                                {% endfor %}
                            </div>
                            <div class="col col-action">
                                <button data-message="Are you sure about that?:)" data-action="{{ url(['admin/delete']) }}" data-id="{{ post.id }}" class="js-delete btn btn-danger">
                                    Delete
                                </button>
                                <br>
                                <br>
                                <a class="btn btn-default" href="{{ url(['admin/edit/'], {'id' : post.id}) }}">
                                    Edit
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
